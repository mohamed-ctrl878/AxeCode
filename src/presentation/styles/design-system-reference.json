    },
    "usage": {
        "import": "@import '../theme.css';",
        "compose": "composes: btn btn-black from '../theme.css';",
        "variables": "background-color: var(--main-bg-color);",
        "example": {
            "button": {
                "jsx": "<button className={styles.myBtn}>Click</button>",
                "css": ".myBtn { composes: btn btn-black from '../theme.css'; }"
            },
            "card": {
                "jsx": "<div className={styles.card}>Content</div>",
                "css": ".card { composes: card hover-lift from '../theme.css'; }"
            }
        }
    },
    "files": {
        "main": "design-system.css",
        "reference": "theme.css",
        "guides": {
            "complete": "DESIGN_SYSTEM_GUIDE.md",
            "migration": "MIGRATION_GUIDE.md",
            "readme": "README.md"
        },
        "examples": {
            "comprehensive": "examples/design-system-usage-example.module.css",
            "simple": "examples/simple-example.module.css"
        }
    },
    "principles": {
        "do": [
            "استخدم المتغيرات CSS دائماً: var(--name)",
            "اتبع نظام المسافات المحدد",
            "استخدم composes للـ utility classes",
            "احترم نقاط التوقف Responsive",
            "اختبر على جميع أحجام الشاشات"
        ],
        "dont": [
            "لا تستخدم ألوان خارج النظام",
            "لا تستخدم ظلال مخصصة بدون سبب",
            "لا تكسر نظام المسافات",
            "لا تستخدم border-radius كبير",
            "لا تنسى الاستجابة"
        ]
    },
    "quickReference": {
        "mostUsedClasses": [
            "btn btn-black",
            "btn btn-outline",
            "card",
            "card-grid",
            "container",
            "section",
            "flex-center",
            "hover-lift"
        ],
        "mostUsedVariables": [
            "var(--main-bg-color)",
            "var(--text-primary)",
            "var(--text-secondary)",
            "var(--surface-card)",
            "var(--shadow-solid)",
            "var(--shadow-soft-sm)"
