// jsconfig.json
{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@core/*": ["core/*"],
      "@core/apienv/*": ["core/apienv/*"],
      "@data/*": ["data/*"],
      "@data/models/*": ["data/models/*"],
      "@data/repositories/*": ["data/repositories/*"],
      "@data/storage/*": ["data/storage/*"],
      "@domain/*": ["domain/*"],
      "@domain/entities/*": ["domain/entities/*"],
      "@domain/interfaces/*": ["domain/interfaces/*"],
      "@domain/usecases/*": ["domain/usecases/*"],
      "@core/queries/*": ["core/queries/*"],
      "@core/utils/*": ["core/utils/*"],

      "@presentation/*": ["presentation/*"],
      "@presentation/assets/*": ["presentation/assets/*"],
      "@presentation/pages/*": ["presentation/pages/*"],
      "@presentation/shared/*": ["presentation/shared/*"],
      "@presentation/hooks/*": ["presentation/hooks/*"],
      "@presentation/styles/*": ["presentation/styles/*"],

      "@assets/*": ["assets/*"]
    }
  },
  "include": ["src"]
}
